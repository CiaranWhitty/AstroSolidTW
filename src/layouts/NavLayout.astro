---
const page = Astro.props.page;
---

<div class="drawer">
  <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content">
    <!-- Navbar -->
    <div class="w-full sticky top-0 drop-shadow-2xl z-50">
      <div
        class="sm:w-10/12 w-11/12 navbar mt-4 mr-auto ml-auto rounded-2xl bg-white p-0"
      >
        <div class="flex-none z-10 ml-4">
          <label for="my-drawer-3" class="btn btn-square btn-ghost">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="inline-block w-6 h-6 stroke-current"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </label>
        </div>
        <div class="w-8/12 lg:flex lg:justify-between m-auto">
          <!-- Navbar menu content here -->
          <div class="flex-1">
            <a class="btn btn-ghost normal-case text-base sm:text-xl p-0"
              >1234567891
            </a>
          </div>
          <div class="flex">
            <div class="dropdown dropdown-end">
              <label tabindex="0" class="btn btn-ghost btn-circle">
                <div class="indicator">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
                    ></path>
                  </svg>
                  <span class="badge badge-sm indicator-item">8</span>
                </div>
              </label>
              <div
                tabindex="0"
                class="mt-3 card card-compact dropdown-content w-52 bg-base-100 shadow"
              >
                <div class="card-body">
                  <span class="font-bold text-lg">8 Items</span>
                  <span>Subtotal: $999</span>
                  <div class="card-actions">
                    <button class="btn btn-primary btn-block">View cart</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="dropdown dropdown-end">
              <label tabindex="0" class="btn btn-ghost btn-circle avatar">
                <div class="w-10 rounded-full">
                  <img src="https://placeimg.com/80/80/people" />
                </div>
              </label>
              <ul
                tabindex="0"
                class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-40"
              >
                <li>
                  <a class="justify-between">
                    Profile
                    <!-- <span class="badge">New</span> -->
                  </a>
                </li>
                <li><a>Settings</a></li>
                <li><a>Logout</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Page content here -->
    <slot />
    <!-- Page content here -->
  </div>
  <div class="drawer-side">
    <label for="my-drawer-3" class="drawer-overlay"></label>
    <!-- Sidebar content here -->
    <ul
      class="menu menu-vertical m-0 p-4 overflow-y-auto w-10/12 max-w-xs bg-base-100"
    >
      <h3 class="px-2 mx-2">Navigation - {page}</h3>
      <li
        class="bg-gray-200 rounded-md mt-2"
        style={page === "Home"
          ? { backgroundColor: "gray", color: "white" }
          : {}}
      >
        <a href="/">Home</a>
      </li>
      <li
        class="bg-gray-200 rounded-md mt-2"
        style={page === "Products"
          ? { backgroundColor: "gray", color: "white" }
          : {}}
      >
        <a href="products">Products</a>
      </li>
      <li
        class="bg-gray-200 rounded-md mt-2"
        style={page === "Page 2"
          ? { backgroundColor: "gray", color: "white" }
          : {}}
      >
        <a href="page2">Page 2</a>
      </li>
    </ul>
  </div>
</div>
