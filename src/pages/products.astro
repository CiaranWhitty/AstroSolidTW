---
import { Image } from "@astrojs/image/components";

import MainLayout from "../layouts/MainLayout.astro";
import NavLayout from "../layouts/NavLayout.astro";

import { ProductData } from "../data/products";
---

<MainLayout title="Products" description="This is the Products Page">
  <NavLayout page="Products">
    <div class="flex flex-wrap justify-around lg:w-11/12 w-12/12 m-auto">
      {
        ProductData.map((product) => {
          return (
            <div class="card m-5 w-96 rounded bg-base-100 p-5 shadow-xl duration-500  motion-safe:hover:scale-105">
              <a href={`/products/${product.url_name}`} class="text-center">
                <Image
                  src={product.image.src}
                  alt={product?.name}
                  height={200}
                  aspectRatio="16:9"
                />
              </a>
              <div class="card-body">
                <a
                  href={`/products/${product.url_name}`}
                  class="w-fit hover:underline"
                >
                  <h2 class="card-title">{product.name}</h2>
                </a>
                <p>If a dog chews shoes whose shoes does he choose?</p>
                <div class="card-actions justify-end">
                  {product.categories.map((category) => {
                    return (
                      <a
                        href={`/categories/${category.url_name}`}
                        class="w-fit"
                      >
                        <div class="badge badge-outline bg-gray-300 p-2 hover:underline">
                          {category.name}
                        </div>
                      </a>
                    );
                  })}
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
  </NavLayout>
</MainLayout>
